<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".FormEditarPerfil">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civFotoUsuarioAtualizar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@color/black"
            android:contentDescription="@string/foto_usuario"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/btSelecionarFotoAtualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/bt_selecionar_foto"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:padding="15dp"/>

        <EditText
            android:id="@+id/etnomeAtualizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="name"
            android:inputType="textPersonName"
            android:hint="@string/hint_nome"
            android:padding="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edit_text_shepe"
            android:maxLines="1"/>

        <Button
            android:id="@+id/btAtualizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="15dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="@string/bt_atualizar_dados"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>