<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/white">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btCor1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:backgroundTint="@color/gray"
                android:background="@drawable/boton_shape"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btCor2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:backgroundTint="@color/green"
                android:background="@drawable/boton_shape"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btCor3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:backgroundTint="@color/blue"
                android:background="@drawable/boton_shape"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btCor4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:backgroundTint="@color/red"
                android:background="@drawable/boton_shape"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btCor5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:backgroundTint="@color/yellow"
                android:background="@drawable/boton_shape"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btCor6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:backgroundTint="@color/orange"
                android:background="@drawable/boton_shape"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btCor7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:backgroundTint="@color/purple"
                android:background="@drawable/boton_shape"/>

        </LinearLayout>
    </HorizontalScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btTrocar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:padding="20dp"
        android:backgroundTint="@color/black"
        android:text="@string/bt_trocar"
        android:textSize="19sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAllCaps="false"/>
</LinearLayout>