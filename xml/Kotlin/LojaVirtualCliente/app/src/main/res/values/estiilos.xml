<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.TemaPrincipal" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="android:statusBarColor">@color/dark_blue</item>
        <item name="android:windowLightStatusBar">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>
    <style name="Theme.TemaPrincipal" parent="Base.Theme.TemaPrincipal"/>

    <style name="Base.Theme.TelaForm" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
    <style name="Theme.TelaForm" parent="Base.Theme.TelaForm"/>

    <style name="Base.Theme.TelaProduto" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="android:statusBarColor">@color/dark_blue</item>
        <item name="android:windowLightStatusBar">@color/white</item>
        <item name="android:windowBackground">@color/dark_blue</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>
    <style name="Theme.TelaProduto" parent="Base.Theme.TelaProduto"/>
    
    <style name="Base.Theme.ConteinerForm" parent="Base.Theme.TelaForm">
        <item name="android:background">@drawable/contener_form_shape</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>
    <style name="Theme.ConteinerForm" parent="Base.Theme.ConteinerForm"/>

    <style name="Base.Theme.CampoForm" parent="Base.Theme.ConteinerForm">
        <item name="android:background">@drawable/edit_text_forn_shape</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="Theme.CampoForm" parent="Base.Theme.CampoForm"/>

    <style name="Base.Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.ButtonForm" parent="Base.Widget.App.Button"/>

    <style name="Theme.App.Button.Secondary" parent="Base.Widget.App.Button">
        <item name="backgroundTint">@color/dark_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>
    <style name="ButtonNormal" parent="Theme.App.Button.Secondary"/>
</resources>