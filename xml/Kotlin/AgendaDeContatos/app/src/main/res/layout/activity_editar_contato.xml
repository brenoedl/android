<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".CadastrarContatos">

        <EditText
            android:id="@+id/etNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_nome"
            android:inputType="textPersonName"
            android:autofillHints=""
            android:maxLines="1"
            android:padding="15dp"
            android:layout_marginTop="100dp"
            android:layout_marginHorizontal="20dp"/>

        <EditText
            android:id="@+id/etSobrenome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_sobrenome"
            android:inputType="textPersonName"
            android:autofillHints=""
            android:maxLines="1"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"/>

        <EditText
            android:id="@+id/etIdade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/hint_idade"
            android:inputType="numberSigned"
            android:autofillHints=""
            android:maxLength="3"
            android:gravity="center"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"/>

        <EditText
            android:id="@+id/etTelefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_telefone"
            android:inputType="numberSigned"
            android:autofillHints=""
            android:maxLength="15"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"/>

        <Button
            android:id="@+id/bAtualizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_atualizar"
            android:backgroundTint="@color/purple"
            android:padding="15dp"
            android:layout_margin="20dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>