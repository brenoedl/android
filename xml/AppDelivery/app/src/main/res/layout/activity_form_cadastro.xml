<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FormCadastro">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civFotoUsuario"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/foto_usuario"
            android:src="@color/black"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/gray"/>

        <Button
            android:id="@+id/btSelecionarFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/bt_selecionar_foto"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/dark_gray"/>

        <EditText
            android:id="@+id/etNomeCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:padding="15dp"
            android:maxLines="1"
            android:background="@drawable/edit_text_shape"
            android:autofillHints="name"
            android:inputType="text"
            android:hint="@string/hint_nome"/>

        <EditText
            android:id="@+id/etEmailCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:padding="15dp"
            android:maxLines="1"
            android:background="@drawable/edit_text_shape"
            android:autofillHints="emailAddress"
            android:inputType="textEmailAddress"
            android:hint="@string/hint_email"/>

        <EditText
            android:id="@+id/etSenhaCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:padding="15dp"
            android:maxLines="1"
            android:background="@drawable/edit_text_shape"
            android:autofillHints="password"
            android:inputType="numberPassword"
            android:hint="@string/hint_senha"/>

        <TextView
            android:id="@+id/tvMensagemErroCadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:text=""/>

        <Button
            android:id="@+id/btCadastrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="15dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/red"
            android:textStyle="bold"
            android:text="@string/bt_cadastrar"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>